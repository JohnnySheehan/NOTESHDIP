@model NOTES_HDIP.Models.Note

@{
    ViewData["Title"] = "Edit";
}

<h1><b>Editing Note: @Model.Name...</b></h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoteField" class="control-label"></label>
                <input asp-for="NoteField" class="form-control" />
                <span asp-validation-for="NoteField" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoteSpaceID" class="control-label"></label>
                <select asp-for="NoteSpaceID" class="form-control" asp-items="ViewBag.NoteSpaceID"></select>
                <span asp-validation-for="NoteSpaceID" class="text-danger"></span>
            </div>

            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Save" class="btn btn-success" />
            </form>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-info" asp-action="Index" asp-route-id="@Model.NoteSpaceID">Back to Notes for @Model.NoteSpaces.Name</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
