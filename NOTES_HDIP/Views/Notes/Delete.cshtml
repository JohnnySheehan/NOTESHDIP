@model NOTES_HDIP.Models.Note

@{
    ViewData["Title"] = "Delete";
}

<h1><b>Deleting Note: @Model.Name</b></h1>

<h3><b>Are you sure you want to delete this?</b></h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteField)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoteField)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NoteSpaces)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NoteSpaces.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index" asp-route-id="@Model.NoteSpaceID">Back to Notes for @Model.NoteSpaces.Name</a>
    </form>
</div>
