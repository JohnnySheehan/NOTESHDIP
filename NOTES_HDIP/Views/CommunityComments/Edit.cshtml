@model NOTES_HDIP.Models.CommunityComment

@{
    ViewData["Title"] = "Edit";
}

<h1><b>Editing Your Comment...</b></h1>

<hr />
<h4><b>Comment:</b></h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div>Time Posted
                <br />
                @Model.Created
             
            </div>


            <div hidden class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="@Model.Created " class="form-control" />
                <span asp-validation-for="@Model.Created" class="text-danger"></span>

            </div>

            
            <div class="form-group">
                <label asp-for="PostId" class="control-label"></label>
                <select asp-for="PostId" class="form-control" asp-items="ViewBag.PostId"></select>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>
            -->
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    
    <a class="btn btn-info" asp-action="Index" asp-route-id="@Model.PostId">Back to Comments</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
